<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:checkbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/tools"
    android:background="@drawable/bg">


    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

        </LinearLayout>

        <ImageView
            android:id="@+id/logo_traffic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="27"
            android:src="@drawable/logo_traffik" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10">

            </LinearLayout>

            <!-- <EditText
                 android:id="@+id/et_email_signin"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="80"
                 android:background="@drawable/editbox"
                 android:hint="Email"
                 android:inputType="textEmailAddress"
                 android:paddingLeft="15dip"
                 android:singleLine="true" />-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_email_signin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:singleLine="true"
                    android:layout_gravity="bottom"
                    checkbox:met_baseColor="#fb5722"
                    checkbox:met_textColorHint="#d3d3d3"
                    checkbox:et_labelTextColor="#fb5722"
                    checkbox:met_underlineColor="#fb5722"
                    checkbox:met_primaryColor="#fb5722"
                    checkbox:met_floatingLabel="highlight"
                    checkbox:met_textColor="#000000"
                    />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10">

            </LinearLayout>

            <!-- <EditText
                 android:id="@+id/et_password_signin"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="80"
                 android:background="@drawable/editbox"
                 android:hint="Password"
                 android:inputType="textPassword"
                 android:paddingLeft="15dip"
                 android:singleLine="true" />-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_password_signin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:singleLine="true"
                    android:layout_gravity="bottom"
                    android:inputType="textPassword"
                    checkbox:met_baseColor="#fb5722"
                    checkbox:met_textColorHint="#d3d3d3"
                    checkbox:et_labelTextColor="#fb5722"
                    checkbox:met_underlineColor="#fb5722"
                    checkbox:met_primaryColor="#fb5722"
                    checkbox:met_floatingLabel="highlight"
                    checkbox:met_textColor="#000000"
                    />


            </LinearLayout>

            <ImageView
                android:id="@+id/showPwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:padding="5dip"
                android:src="@drawable/icon_pwd_gone"/>


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="8"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"></LinearLayout>

            <com.rey.material.widget.CheckBox
                android:id="@+id/check_user"
                style="@style/Material.Drawable.CheckBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:buttonTint="#fb5722"
                checkbox:cbd_strokeColor="#fb5722"
                checkbox:cbd_tickColor="#ffffff"
                android:textColor="#000000"
                android:text="General User"/>


            <com.rey.material.widget.CheckBox
                android:id="@+id/check_manager"
                style="@style/Material.Drawable.CheckBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:buttonTint="#fb5722"
                checkbox:cbd_strokeColor="#fb5722"
                checkbox:cbd_tickColor="#ffffff"
                android:textColor="#000000"
                android:text="Traffic Manager"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10">

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_signUp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:background="#fd5722"
                android:orientation="vertical">

                <com.tuffgeekers.utils.AutoResizeTextView
                    android:id="@+id/txt_signIn"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="95"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Sign In"
                    android:textColor="#ffffff"/>

                <com.dd.processbutton.iml.ActionProcessButton
                    android:id="@+id/txt_signIn_action"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#fd5722"
                    custom:pb_colorComplete="#fd5722"
                    custom:pb_colorNormal="#fd5722"
                    custom:pb_colorPressed="#fd5722"
                    custom:pb_colorProgress="#fd5722"
                    android:layout_weight="5"/>

            </LinearLayout>



            <!-- <ImageView
                 android:id="@+id/btn_signin"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="80"
                 android:background="@drawable/nwsgnin" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10">

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:src="@drawable/icon_fb"/>

            </LinearLayout>



            <!-- <ImageView
                 android:id="@+id/btn_signin"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="80"
                 android:background="@drawable/nwsgnin" />-->
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10">

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:src="@drawable/icon_tw"/>

            </LinearLayout>



            <!-- <ImageView
                 android:id="@+id/btn_signin"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="80"
                 android:background="@drawable/nwsgnin" />-->
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"

            android:orientation="horizontal"
            android:weightSum="100">

            <com.tuffgeekers.utils.AutoResizeTextView
                android:id="@+id/tv_bottomText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Create a new account? Signup"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_gravity="center"
                android:background="#d3d3d3"
                android:gravity="center"/>

            <!--  <ImageView
                  android:id="@+id/btn_signup"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="80"
                  android:background="@drawable/nwsignup" />-->
        </LinearLayout>




    </LinearLayout>


</FrameLayout>
