<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:checkbox="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="25dip"
    android:background="@drawable/shape"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#fd5722"
        android:paddingBottom="10dip"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Show Reports from"/>

    <com.rey.material.widget.CheckBox
        android:id="@+id/reportFrom_user"
        style="@style/Material.Drawable.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:buttonTint="#fb5722"
        checkbox:cbd_strokeColor="#fb5722"
        checkbox:cbd_tickColor="#ffffff"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="General User"/>

    <com.rey.material.widget.CheckBox
        android:id="@+id/reportFrom_managers"
        style="@style/Material.Drawable.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:buttonTint="#fb5722"
        checkbox:cbd_strokeColor="#fb5722"
        checkbox:cbd_tickColor="#ffffff"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Traffic Managers"/>


    <com.rey.material.widget.CheckBox
        android:id="@+id/reportFrom_both"
        style="@style/Material.Drawable.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:buttonTint="#fb5722"
        checkbox:cbd_strokeColor="#fb5722"
        checkbox:cbd_tickColor="#ffffff"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Both"/>
</LinearLayout>